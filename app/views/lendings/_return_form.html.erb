<% if current_user == copy.current_borrower %>

  <%= form_for lending do |f| %>
    <%= f.hidden_field :copy_id, value: copy.id %>
    <%= f.hidden_field :borrower_id, value: current_user.id %>
    <%= f.hidden_field :status, value: "returned" %>
    <br>
    <%= f.submit "Return book to #{copy.user.name}" %>
  <% end %>

<% end %>
