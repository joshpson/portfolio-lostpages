<% if current_user.friends.include?(copy.user) %>

  <%= form_for lending do |f| %>
    <%= f.hidden_field :copy_id, value: copy.id %>
    <%= f.hidden_field :borrower_id, value: current_user.id %>
    <%= f.hidden_field :status, value: "requested" %>
    <br>
    <%= f.submit "Borrow this book from #{copy.user.name}" %>
  <% end %>

<% end %>
