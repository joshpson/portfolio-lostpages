<h1>All Lendings</h1>

<h3>The books that you borrowed</h3>

    <% if !current_user.active_borrowings.empty? %>
	  <% current_user.active_borrowings.each do |lending| %>
	    <%= render partial: "lendings/list_lendings", locals: {lending: lending} %>
	    <%= render partial: "lendings/return_form", locals: {copy: lending.copy, lending: lending} %>
	    <br>
	  <% end %>
	<% else %>
		<P>You have borrowed no book recently.</P>
	<% end %>


<h3>The books that you lent</h3>

	<% current_user.active_lendings.each do |lending| %>
		<%= render partial: "list_lendings", locals:{lending: lending} %>
		Due Date: <%= lending.formatted_due_date %><br>
	<% end %>



<h3>Rate these returned books</h3>
	<% current_user.past_unrated_lendings.each do |lending| %>
		<%= render partial: "list_lendings", locals:{lending: lending} %>
		Borrower: <%= lending.borrower.name %><br>
		<%= render partial: "rate_lending_form", locals: {lending: lending} %>
		<br>
	<% end %>


<h3>Requested Books</h3>
<% if !current_user.requested_borrowings.empty? %>
  <% current_user.requested_borrowings.each do |lending| %>
    <%= render partial: "lendings/list_lendings", locals: {lending: lending} %>
  <% end %>
<% end %>