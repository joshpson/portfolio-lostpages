<div>
  <h2>Books you are currently borrowing</h2>
  <div class="row">
    <% if !current_user.active_borrowings.empty? %>
      <% current_user.active_borrowings.each do |lending| %>
      <div class="col-md-2 shadow p-3 mb-5 bg-white" >
          <%= render partial: "book_view", locals: {lending: lending} %><br>
            Lend Date: <%= lending.formatted_lend_date %><br>
            Due Date: <%= lending.formatted_due_date %>
          <%= render partial: "return_form", locals: {copy: lending.copy, lending: lending} %>
        </div>
      <% end %>
    <% else %>
    <div class="col-sm-2">
      <p>You have not borrowed any books recently.</p>
    </div>
    <% end %>
  </div>
</div>
<br>
<div>
  <h2>Books you have requested to borrow</h2>
  <div class="row">
    <% if !current_user.requested_borrowings.empty? %>
      <% current_user.requested_borrowings.each do |lending| %>
      <div class="col-md-2 shadow p-3 mb-5 bg-white" >
        <%= render partial: "book_view", locals: {lending: lending} %>
        </div>
      <% end %>
    <% else %>
    <div class="col-sm-2">
      <p>You have not requested any books.</p>
    </div>
    <% end %>
  </div>
</div>
